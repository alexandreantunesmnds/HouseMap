<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PieceEnCoursActivity">

    <Button
            android:text="@string/ajout_mur"
            android:onClick="clickAjoutMur"
            android:layout_width="180dp"
            android:layout_height="52dp" android:id="@+id/button3"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="118dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="236dp" android:layout_marginEnd="113dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.5"
            android:backgroundTint="#0097A7" android:textColor="#212121"/>
    <Button
            android:text="@string/annuler"
            android:onClick="clickAnnuler"
            android:layout_width="180dp"
            android:layout_height="52dp" android:id="@+id/termine"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="118dp" android:layout_marginEnd="113dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/button3" app:layout_constraintHorizontal_bias="0.5"
            app:iconTint="#E91E63" android:backgroundTint="#FF6F00" android:textColor="#263238"/>
    <EditText
            android:layout_width="225dp"
            android:layout_height="52dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextTextNamePiece"
            android:minHeight="48dp" android:autofillHints="" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.164" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="120dp" android:textSize="16sp"
            android:hint="@string/nom_de_pi_ce"/>
    <Button
            android:text="@string/valider"
            android:onClick="clickValiderNom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button4"
            android:layout_marginStart="28dp" app:layout_constraintStart_toEndOf="@+id/editTextTextNamePiece"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="120dp" android:layout_marginEnd="31dp"
            app:layout_constraintEnd_toEndOf="parent" app:iconTint="#2196F3" android:backgroundTint="#03A9F4"
            android:textColor="#4A148C"/>
    <Button
            android:text="@string/boussole"
            android:onClick="clickBoussole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button5"
            android:layout_marginEnd="150dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="150dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="184dp"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintTop_toBottomOf="@+id/termine"
            app:layout_constraintVertical_bias="0.554" android:backgroundTint="#F57C00" android:textColor="#4527A0"/>
</androidx.constraintlayout.widget.ConstraintLayout>